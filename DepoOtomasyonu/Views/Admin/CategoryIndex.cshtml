@model IEnumerable<DepoOtomasyonu.Model.Models.CategoryModel>
@{
    ViewData["Title"] = "CategoryIndex";
}
<div class="border p-4 bg-white">
    <div class="row">
        <div class="col-md-6 form-group">
            <h2 class="text-info">Kategoriler</h2>
        </div>
        <div class="col-md-3 form-group">
            <button style="margin-left:140px" onclick="location.href='@Url.Action("AdminDashboard", "Admin")'" class="btn btn-primary text-white">Ana Menü</button>
        </div>
        <div class="col-md-3 form-group">
            <a onclick="location.href='@Url.Action("CategoryInsertOrUpdate", "Admin")'" class="btn btn-info form-control text-white">Yeni oluştur</a>
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th class="text-center">Kategori Id</th>
                    <th class="text-center">Kategori İsmi</th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            @item.CategoryId
                        </td>
                        <td class="text-center">
                            @item.CategoryName
                        </td>
                        <td class="text-center">
                            <a class="btn btn-primary text-white" asp-action="CategoryInsertOrUpdate" asp-route-Id="@item.CategoryId" style="background-color:#235586">Düzenle</a>
                        </td>
                        <td class="text-center">
                            <a class="btn btn-danger text-white" asp-action="CategoryDelete" asp-route-Id="@item.CategoryId">Sil</a>
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>Listelenecek veri yok ...</p>
        }
    </div>
</div>

