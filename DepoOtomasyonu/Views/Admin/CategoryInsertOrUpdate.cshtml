@model DepoOtomasyonu.Model.Models.CategoryModel
@{
    ViewData["Title"] = "CategoryInsertOrUpdate";
}

<form asp-action="CategoryInsertOrUpdate" asp-controller="Admin">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="CategoryId" />
    <div class="row">
        <div class="col-md-12 form-group">
            <label class="control-label">Kategori</label>
            <input asp-for="CategoryName" class="form-control" placeholder="Kategori" />
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-12">
            @if (Model.CategoryId == 0)
            {
                <button type="submit" class="btn btn-primary form-control" style="background-color:#235586">Kaydet</button>
            }
            else
            {
                <button type="submit" class="btn btn-primary form-control" style="background-color:#235586">Güncelle</button>
            }
        </div>
    </div>
</form>

