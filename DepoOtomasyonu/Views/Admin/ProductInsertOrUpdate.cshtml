@model DepoOtomasyonu.Model.ViewModels.ProductViewModel
@{
    ViewData["Title"] = "ProductInsertOrUpdate";
}
<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ProductModel.ProductId" />
    <div class="row">
        <div class="col-md-12 form-group">
            <label class="control-label">Ürün Kodu</label>
            <input asp-for="ProductModel.ProductCode" class="form-control" placeholder="Ürün Kodu" />
            <span asp-validation-for="ProductModel.ProductCode" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 form-group">
            <label class="control-label">Fiyat</label>
            <input asp-for="ProductModel.ProductPrice" class="form-control" placeholder="Fiyat" />
            <span asp-validation-for="ProductModel.ProductPrice" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 form-group">
            <label class="control-label">Adet</label>
            <input asp-for="ProductModel.ProductCount" class="form-control" placeholder="Adet" />
            <span asp-validation-for="ProductModel.ProductCount" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 form-group">
            <label class="control-label">Kategori</label>
            @Html.DropDownListFor(x=>x.ProductModel.CategoryId,
            Model.CategoryList,"Kategori Seçiniz",new {@class="form-control"})
            <span asp-validation-for="ProductModel.CategoryId" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 form-group">
            <label class="control-label">Ürün Resmi</label>
            <input asp-for="ProductModel.ProductPicture" class="form-control" placeholder="Ürün Resmi" type="file" />
            <span asp-validation-for="ProductModel.ProductPicture" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-12">
            @if (Model.ProductModel == null)
            {
                <button type="submit" class="btn btn-primary form-control" style="background-color:#235586">Kaydet</button>
            }
            else
            {
                <button type="submit" class="btn btn-primary form-control" style="background-color:#235586">Güncelle</button>
            }
        </div>
    </div>
</form>
@section Scripts {
    <partial name ="_ValidationScriptsPartial" />
    <script>
        $(function{
            $("#datepicker_dob").datepicker({

            });
        }
    </script>
}

